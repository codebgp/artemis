[run]
omit =
    */tests/*
    */utils/*

[report]
exclude_lines =
    except Exception:
    except Exception as e:
    except ProcessLookupError:
    raise
    log.warning
    log.exception
    log.error
    log.debug

[paths]
source =
    backend-services/*/core
    monitor-services/*/core
    root/*/core
